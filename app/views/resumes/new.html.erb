<div class="col-md-8 col-centered">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>投递履历到 <%= @job.title %></h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for [@job, @resume] do |f| %>
        <%= f.input :content %>
        <%= f.input :attachment %>
        <%= f.submit "送出", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
