<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
    <h3>
    <div class="button-newjob pull-right">
      <%= link_to("New Job", new_admin_job_path, :class => "btn btn-default") %>
    </div>
    <h3>
  </div>

  <!-- Table -->
  <table class="table text-center">
    <thead>
      <tr>
        <td>职缺</td>
        <td>收到履历数量</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>管理选项</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
       <tr>
         <td>
           <%= render_job_status(job) %>
           <%= link_to(job.title, admin_job_path(job)) %>
         </td>
         <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
         <td><%= job.wage_lower_bound %></td>
         <td><%= job.wage_upper_bound %></td>
         <td>
           <%= link_to("Edit", edit_admin_job_path(job)) %> |
           <%= link_to("Delete", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?"}) %> |
          <% if job.is_hidden %>
           <%= link_to("Public", publish_admin_job_path(job), :method => :post, class: "btn btn-xs btn-default") %>
           <% else %>
           <%= link_to("Hidden", hide_admin_job_path(job), :method => :post, class: "btn btn-xs btn-default") %>
          <% end %>
         </td>
        <td>
           <%= job.created_at %>
        </td>
       </tr>
      <% end %>
     </tbody>
  </table>
</div>
