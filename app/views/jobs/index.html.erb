  <div class="panel-body">
    <tr>
      <td><strong>排序方式：</strong></td>
      <td><%= link_to("最新", jobs_path(:city => @city, :education => @education), class: "btnsize btn btn-info") %></td>
      <td><%= link_to("薪资下限", jobs_path(:city => @city, :education => @education, :order => "by_lower_bound"), class: "btnsize btn btn-info") %></td>
      <td><%= link_to("薪资上限", jobs_path(:city => @city, :education => @education, :order => "by_upper_bound"), class: "btnsize btn btn-info") %></td>
    </tr>
  </div>
</div>

  <%= render :partial => "jobs_item", :collection => @jobs, :as => :job %>
