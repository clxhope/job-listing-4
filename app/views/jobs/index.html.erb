  <div class="panel panel-default">
    <div class="panel-body">
      <td><strong>工作地点：</strong></td>
      <td><%= link_to("不限", jobs_path, class: "btnsize btn btn-info") %></td>
      <td><%= link_to("北京", jobs_path(:city => "北京"), class: "btnsize btn btn-info") %></td>
      <td><%= link_to("上海", jobs_path(:city => "上海"),  class: "btnsize btn btn-info") %></td>
      <td><%= link_to("深圳", jobs_path(:city => "深圳"),  class: "btnsize btn btn-info") %></td>
      <td><%= link_to("广州", jobs_path(:city => "广州"),  class: "btnsize btn btn-info") %></td>
    </div>
    <div class="panel-body">
      <td><strong>学历要求：</strong></td>
      <td><%= link_to("不限", jobs_path(:city => @city), class: "btnsize btn btn-info") %></td>
      <td><%= link_to("大专", jobs_path(:city => @city, :education => "大专"), class: "btnsize btn btn-info") %></td>
