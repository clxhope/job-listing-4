      <div class="row text-center">
        <div class="col job-title">
          <h5 class="keyword"><%= job.title %></h5>
          <p><%= job.description %></p>
        </div>
        <div class="col job-city fa fa-map-marker"><%= job.city %></div>
        <div class="col job-city fa fa-graduation-cap"><%= job.education %></div>
        <div class="col job-wage"><%= job.wage_lower_bound %>ï½ž<%= job.wage_upper_bound %></div>
        <div class="col job-date fa fa-calendar"><%= job.created_at %></div>
      </div>
    </li>
<% end %>
